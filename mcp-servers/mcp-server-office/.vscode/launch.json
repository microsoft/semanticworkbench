{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "mcp-servers: mcp-server-word",
      "cwd": "${workspaceFolder}",
      "module": "mcp_server.start",
      "args": ["--transport", "sse", "--port", "25566"],
      "consoleTitle": "mcp-server-word"
      // "justMyCode": false // Set to false to debug external libraries
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
