{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Vite App",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Vite App (no strict mode)",
      "env": {
        "VITE_DISABLE_STRICT_MODE": "true"
      },
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"]
    }
  ]
}
